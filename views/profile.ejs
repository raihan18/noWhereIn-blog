<!doctype html>
<html>
<head>
<%include ./templates/head%>
</head>
<body>
<header>
    <%include ./templates/header%>
</header>
<div class="container">

    <div class="page-header text-center"><br/><br/>
        <h1><span class="fa fa-user"></span></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <div class="col-sm-3"></div>
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3>Whoami</h3>

                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>Email</strong>: <%= user.local.email %><br>
                    <strong>Hash</strong>: <%= user.local.password %>
                </p>

            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>

</div>
<footer>
    <%include ./templates/footer%>
</footer>
