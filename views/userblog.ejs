<html>
<head>
    <%include ./templates/head%>
</head>
<body>
<header>
    <%include ./templates/header%>
</header>
<div class="container">
    <!-- jumbotron-->
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <!-- TODO-->
                <h2 style="font-family: 'Courier New'; color: #0a6d90"><br/> <%= userid%>'s posts </h2>
            </div>
            <div class="col-lg-1"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">

            <table class="table table-hover">
                <thead> <tr> <th>Previous Posts!</th> </tr> </thead>
                <tbody>
                <% posts.forEach(function(post) { %>
                <tr>
                    <td>
                        <span class="fa fa-user"></span>&nbsp;<%= post.author %>
                        <br/>
                        <strong><a href="/post/user/<%= post._id%>"> <%= post.title %> </a> </strong>
                    </td>
                </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<footer>
    <%include ./templates/footer%>
</footer>

<!--<script src="./js/controller/myblog.js"></script>-->
</body>
</html>